# Dózsa Apartman Szeged - Apache Configuration
# ISPConfig 3.3.0p3 kompatibilis

# PHP 7.4 beállítások
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 30
    php_value max_input_time 30
    php_value memory_limit 128M
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log /var/log/php_errors.log
</IfModule>

# Biztonság - Érzékeny fájlok védelem
<FilesMatch "^\.env">
    Require all denied
</FilesMatch>

<FilesMatch "\.(md|log|json|lock)$">
    Require all denied
</FilesMatch>

# Git fájlok védelem
<DirectoryMatch "\.git">
    Require all denied
</DirectoryMatch>

# Dokumentáció védelem
<FilesMatch "(README|CHANGELOG|LICENSE|INSTALL|SECURITY|CONTRIBUTING)">
    Require all denied
</FilesMatch>

# Charset UTF-8
AddDefaultCharset UTF-8
AddCharset UTF-8 .html .css .js .php

# MIME types
<IfModule mod_mime.c>
    AddType text/html .html .htm
    AddType text/css .css
    AddType application/javascript .js
    AddType image/jpeg .jpg .jpeg
    AddType image/png .png
    AddType image/gif .gif
    AddType image/webp .webp
    AddType image/svg+xml .svg
    AddType application/json .json
    AddType application/pdf .pdf
</IfModule>

# Gzip tömörítés
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Cache control
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType image/x-icon "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>

# Biztonsági fejlécek
<IfModule mod_headers.c>
    # XSS védelem
    Header set X-XSS-Protection "1; mode=block"

    # Clickjacking védelem
    Header set X-Frame-Options "SAMEORIGIN"

    # MIME sniffing védelem
    Header set X-Content-Type-Options "nosniff"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Permissions Policy
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"

    # Content Security Policy (finomhangolható)
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' https://www.google.com https://www.gstatic.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; frame-src https://www.google.com;"
</IfModule>

# URL Rewriting
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # HTTPS átirányítás (ha van SSL)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

    # www átirányítás (opcionális)
    # RewriteCond %{HTTP_HOST} !^www\. [NC]
    # RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

    # index.html elhagyása URL-ből
    RewriteCond %{THE_REQUEST} /index\.html [NC]
    RewriteRule ^(.*)index\.html$ /$1 [R=301,L]

    # Hibaoldalak
    ErrorDocument 400 /error/400.html
    ErrorDocument 401 /error/401.html
    ErrorDocument 403 /error/403.html
    ErrorDocument 404 /error/404.html
    ErrorDocument 500 /error/500.html
    ErrorDocument 502 /error/502.html
    ErrorDocument 503 /error/503.html
</IfModule>

# Directory browsing tiltása
Options -Indexes

# Server info elrejtése
ServerSignature Off
